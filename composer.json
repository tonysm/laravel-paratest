{
    "name": "tonysm/dbcreatecommand",
    "description": "Artisan command to create a database",
    "keywords": [
        "tonysm",
        "dbcreatecommand"
    ],
    "homepage": "https://github.com/tonysm/dbcreatecommand",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Tony Messias",
            "email": "tonyzrp@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "5.8.*"
    },
    "require-dev": {
        "orchestra/testbench": "3.8.*",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Tonysm\\DbCreateCommand\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tonysm\\DbCreateCommand\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tonysm\\Dbcreatecommand\\DbCreateCommandServiceProvider"
            ],
            "aliases": {
                "DbCreateCommand": "Tonysm\\DbCreateCommand\\DbCreateCommandFacade"
            }
        }
    }
}
